@{
}
@model WebApplication17.Models.Book

<h2>@Model.Title</h2>

<div>
    <h3>Author: @Model.Author</h3> <!-- Hiển thị tác giả -->
    <h3>Price: @Model.Price</h3> <!-- Hiển thị giá -->
    <p>@Model.Description</p> <!-- Hiển thị mô tả -->
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="@Model.Image" alt="Book Cover" style="max-width:200px; max-height:300px;" />
    }
    else
    {
        <p>No cover image available.</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
